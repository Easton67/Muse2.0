@model IEnumerable<DataObjects.User>

@{
    ViewBag.Title = "ViewAllFriends";
    ViewBag.Hero = "Your Friends";
}

<h2>Friends</h2>

<p>
    @Html.ActionLink("Add", "Create")
</p>

<div class="row mx-5 row-cols- lg-10">
    @foreach (var friend in Model)
    {
        <div id="library-cards-container" class="col my-4 mx-5 inline w-auto">
            <div id="image-container" class="image-container">
                <a href="@Url.Action("Details", "User", new { id = friend.UserID })">
                    <img class="artist-img" src="@Url.Action("GetFriendPhoto", "Helper", new { friendID = friend.UserID })" alt="Photo of @friend.ProfileName" />
                </a>
                <p class="mt-4 text-center">@friend.ProfileName</p>
            </div>
        </div>
    }
</div>

