@model IEnumerable<DataObjects.Song>

@{
    ViewBag.Title = "Library";
}

<h2>Library</h2>

<div class="row mx-5 row-cols-lg-10">
        @foreach (var item in Model) { 
            <div class="col my-4 inline" style="display: flex; align-items: center;">
                <img style="height: 100px; width: 100px;" src="@Url.Content(item.ImageFilePath)" alt="Song Image">
                <div class="mx-3">
                    <br>
                    <div class="d-inline-block">
                        <p>@Html.DisplayFor(modelItem => item.Title)<img style="filter: invert(100%); width: 10px; height: 10px" src="~/Images/explicit.png" /></p>
                    </div>
                    <p>@Html.DisplayFor(modelItem => item.Artist)</p>
                    <p>@Html.DisplayFor(modelItem => item.Album)</p>
                </div>
            </div>
    }   
</div>




