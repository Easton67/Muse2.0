@model Muse3.Models.RegisterUserViewModel
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">

    @using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div id="login-container">
            <img id="login-muse-logo" src="~/Images/museV3Logo.png" alt="Muse Logo" />
                <div class="form-container">
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "invalid" })
                        @Html.ValidationMessageFor(m => m.ProfileName, "", new { @class = "invalid" })
                    </div>
                    @Html.TextBoxFor(m => m.ProfileName, new { @class = "form-control form-email-password-input", placeholder = "Profile Name" })
                    <br />
                    <div>
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "invalid" })
                    </div>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-email-password-input", placeholder = "First Name" })
                    <br />
                    <div>
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "invalid" })
                    </div>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-email-password-input", placeholder = "Last Name" })
                    <br />
                    <div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "invalid" })
                    </div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-email-password-input", placeholder = "Email" })
                </div>
                <br />
                <div class="row">
                    <div>
                        <input id="submit" type="submit" value="New User" class="btn bg-purple" />
                    </div>
                </div>
            <br>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

