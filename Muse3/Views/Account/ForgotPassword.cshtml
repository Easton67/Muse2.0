@model Muse3.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    ViewBag.PageType = "NoHero";
}

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
    <div id="login-container">
        <img id="login-muse-logo" src="~/Images/museV3Logo.png" alt="Muse Logo" style="margin-right: 300px!important; width: 450px; height: 200px;" />
        <form id="form-login" class="form" action="">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "invalid" })
            <br />
            <div class="row mt-5 pt-5">
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    <br />
                </div>
            </div>
            <div class="row">
                <div class="offset-md-2 col-md-10">
                    <input type="submit" class="btn bg-purple fw-semibold" value="Email Link" />
                </div>
            </div>
        </form>
        <br />
        <div class="footer-buttons-container d-flex gap-5">
            @Html.ActionLink("Sign Up", "Register", new { @class = "footer-buttons" })
            @Html.ActionLink("Login", "Login", new { @class = "footer-buttons" })
        </div>
        <br>
        <br>
    </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}