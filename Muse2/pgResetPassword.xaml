<Page x:Class="Muse2.pgResetPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Muse2"
      mc:Ignorable="d" 
      d:DesignHeight="242" d:DesignWidth="250" 
      Title="pgResetPassword">
    <Grid>
        <StackPanel x:Name="stkForgetPasswordInputs">
            <StackPanel x:Name="stkEmail" Margin="0,17,0,5">
                <Label x:Name= "lblEmail"
                        Content="Email"
                        Foreground="Black"
                        FontSize="12"
                        FontWeight="Medium"
                        FontFamily="Montserrat"                             
                        Margin="0,0,0,-6" 
                        Padding="10,0,0,1" 
                        Width="250"/>
                <TextBox x:Name="txtEmail"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="Black"
                         CaretBrush="Black"
                         BorderBrush="Black"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="10,5,31,0"
                         Padding="20,0,0,0" 
                         VerticalAlignment="Center" 
                         Width="209">
                    <TextBox.Background>
                        <ImageBrush ImageSource="C:\Users\67Eas\source\repos\WpfTutorials\Wpf-LoginForm\Images\user-icon.png"
                                     Stretch="None"
                                     AlignmentX="Left"/>
                    </TextBox.Background>
                </TextBox>
            </StackPanel>
            <StackPanel x:Name="stkPassword" 
                        Margin="0,-4,0,0">
                <Label x:Name="lblPassword"
                       Content="Password"
                       Foreground="Black"
                       FontSize="12"
                       FontWeight="Medium"                          
                       Margin="5,0,0,0"/>

                <PasswordBox x:Name="pwdPassword"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="Black"
                            CaretBrush="Black"
                            BorderBrush="Black"
                            BorderThickness="0,0,0,2"
                            Height="28"
                            VerticalContentAlignment="Center"
                            Margin="10,0,29,0" 
                            Width="210" 
                            Padding="20,0,0,3">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="C:\Users\67Eas\source\repos\WpfTutorials\Wpf-LoginForm\Images\key-icon.png"
                                    Stretch="None"
                                    AlignmentX="Left"/>
                    </PasswordBox.Background>
                </PasswordBox>
            </StackPanel>
            <TextBox x:Name="txtShownPasswordTop"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,0"
                    Height="21"
                    VerticalContentAlignment="Center"
                    Margin="31,-36,28,0" 
                    Cursor="Arrow"
                    Width="187" 
                    IsReadOnly="True" 
                    Panel.ZIndex="8" Background="White"/>
            <StackPanel x:Name="stkConfirmPassword" Margin="0,14,0,0">
                <TextBlock
                           x:Name="txtConfirmPasswordLabel"
                           Text="Confirm Password"
                           Foreground="Black"
                           FontSize="12"
                           FontWeight="Medium"                           
                           Margin="10,0,0,0"/>
                <PasswordBox x:Name="pwdConfirmPassword"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="Black"
                                CaretBrush="Black"
                                BorderBrush="Black"
                                BorderThickness="0,0,0,2"
                                Height="28"
                                VerticalContentAlignment="Center"
                                Margin="10,0,29,0" 
                                Width="210" 
                                Padding="20,0,0,3">
                    <PasswordBox.Background>
                        <ImageBrush ImageSource="C:\Users\67Eas\source\repos\WpfTutorials\Wpf-LoginForm\Images\key-icon.png"
                           Stretch="None"
                           AlignmentX="Left"/>
                    </PasswordBox.Background>
                </PasswordBox>
            </StackPanel>
            <TextBox x:Name="txtShownPasswordBottom"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="Black"
                    CaretBrush="Black"
                    BorderBrush="Black"
                    BorderThickness="0,0,0,0"
                    Height="21"
                    VerticalContentAlignment="Center"
                    Margin="31,-29,28,0" 
                    Cursor="Arrow"
                    Width="187" 
                    IsReadOnly="True" 
                    Panel.ZIndex="8"/>
        </StackPanel>
        <StackPanel>
            <Button x:Name="btnResetPassword"  
                     Content="RESET PASSWORD"
                     Foreground="Black"
                     FontSize="12"
                     FontFamily="Montserrat"
                     Cursor="Hand" 
                     FontWeight="SemiBold" 
                     Margin="0,202,0,0" 
                     Click="btnResetPassword_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" 
                     Height="40"
                     CornerRadius="20">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFE5BAEA"/>
                                    <GradientStop Color="#FFE8CBCB" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <StackPanel>
            <Button x:Name="btnShowPasswordTop" 
                    Height="16" 
                    Width="16" 
                    BorderThickness="0,0,0,0" 
                    HorizontalContentAlignment="Right" 
                    HorizontalAlignment="Right" 
                    Padding="1,0,1,0" 
                    Background="Transparent"
                    Margin="0,88,8,-22" Click="btnShowPasswordTop_Click" >
                <Image Source="C:\Users\67Eas\Downloads\eye.png"/>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="9"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnShowPasswordBottom" 
                    Height="16" 
                    Width="16" 
                    BorderThickness="0,0,0,0" 
                    HorizontalContentAlignment="Right" 
                    HorizontalAlignment="Right" 
                    Padding="1,0,1,0" 
                    Background="Transparent"
                    Margin="0,68,8,-18" Click="btnShowPasswordBottom_Click" >
                <Image Source="C:\Users\67Eas\Downloads\eye.png"/>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="9"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel> 
    </Grid>
</Page>
