<Window x:Class="Muse2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Muse2"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1500" MinWidth="810" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="10"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Padding="20px, 0px">
            <MenuItem x:Name="mnuFile" Header="File">
                <MenuItem x:Name="mnuNewPlaylist" Header="New Playlist"/>
                <MenuItem x:Name="mnuExitApplcation" Header="Exit Application" Click="mnuExitApplcation_Click"/>
            </MenuItem>
            <MenuItem x:Name="mnuSong" Header="Song">
                <MenuItem x:Name="mnuAddSongToLibrary" Header="Add Song To Library"/>
                <MenuItem x:Name="mnuViewAllSongs" Header="View All Songs"/>
            </MenuItem>
            <MenuItem x:Name="mnuAccount" Header="Account">
                <MenuItem x:Name="mnuViewProfile" Header="View Profile"/>
            </MenuItem>
            <MenuItem x:Name="mnuFriends" Header="Friends">
                <MenuItem x:Name="mnuAddFriend" Header="Add a Friend"/>
                <MenuItem x:Name="mnuViewAllFriends" Header="View All Friends"/>
            </MenuItem>
            <MenuItem x:Name="mnuControls" Header="Controls">
                <MenuItem x:Name="mnuPlay" Header="Play"/>
                <MenuItem x:Name="mnuPause" Header="Pause"/>
                <MenuItem x:Name="mnuShuffle" Header="Shuffle">
                    <MenuItem x:Name="mnuShuffleOn" Header="On"/>
                    <MenuItem x:Name="mnuShuffleOff" Header="Off"/>
                </MenuItem>
                <MenuItem x:Name="mnuNext" Header="Next"/>
                <MenuItem x:Name="mnuRewind" Header="Rewind"/>
            </MenuItem>
            <MenuItem x:Name="mnuHelp" Header="Help">
                <MenuItem x:Name="mnuSignUp" Header="Sign Up"/>
            </MenuItem>
                <MenuItem x:Name="mnuArtist" Header="Artist">
                <MenuItem x:Name="mnuViewPage" Header="View Page"/>
                <MenuItem x:Name="mnuPostSong" Header="Post Song"/>
                <MenuItem x:Name="mnuPostAlbum" Header="Post Album"/>
            </MenuItem>
            <MenuItem x:Name="mnuAdmin" Header="Admin">
                <MenuItem x:Name="mnuViewAllUsers" Header="View All Users"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- Col0 -->
            <Image x:Name="imgLogo" Grid.Row="0" Width="200" HorizontalAlignment="Left" Margin="50,0,0,0" Source="/Resources/museLogo.png"/>
            <!-- Col1 -->
            <Label x:Name="lblSongTitle" Content="Song" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,47" FontSize="24" />
            <Label x:Name="lblSongArtist" Content="Artist" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,21,0,0" FontSize="18" />
            <Image x:Name="imgRewind" Grid.Row="1" Grid.Column="1" Width="25" Source="/Resources/rewind.png" Margin="0,0,5,0" HorizontalAlignment="Left"/>
            <Image x:Name="imgCoverArt" Grid.Row="0" Grid.Column="1" Width="75" Source="/defaultAlbumImage.png" HorizontalAlignment="Left" Margin="34,0,0,0" />
            <ProgressBar x:Name="barSongLength" Grid.Row="1" Grid.Column="1" Height="10" Width="auto" Foreground="#FFD5C9E3" Margin="31,0,31,0"/>
            <!-- 
            <Image x:Name="imgShuffle" Grid.Row="2" Grid.Column="1" Width="25" Source="/shuffle.png" HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Top"/>
            <Image x:Name="imgQueue" Grid.Row="2" Grid.Column="1" Width="25" Source="/queue.png" HorizontalAlignment="Right" Margin="0,0,30,0" VerticalAlignment="Top"/>
            -->
            <Image x:Name="imgNext" Grid.Row="1" Grid.Column="1" Width="25" Source="/Resources/next.png" Margin="5,0,0,0" HorizontalAlignment="Right"/>
            <Image x:Name="imgPause" Grid.Row="2" Grid.Column="1" Width="25" HorizontalAlignment="Center" Source="/Resources/pause.png" Margin="0,0,0,0"/>
            <Image x:Name="imgPlay" Grid.Row="2" Grid.Column="1" Width="25" HorizontalAlignment="Center" Source="/Resources/play.png"/>

            <!-- Col2 -->
            <Image x:Name="imgAccount" Grid.Row="0" Grid.Column="2" Width="100" Source="/Resources/defaultAccount.png" HorizontalAlignment="Center"/>

            <Button x:Name="btnLogin" Content="Log In"
                    Grid.Row="1" Grid.Column="2" 
                    FontWeight="Bold" Width="50" 
                    HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="-165,0,0,0" Background="White" BorderThickness="0,0,0,0" Click="btnLogin_Click"/>

            <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="2"
                     Margin="2px" 
                     Width="179"
                     HorizontalAlignment="Right" Text="Liam@gmail.com"/>

            <Label x:Name="lblEmail" Grid.Row="1" Grid.Column="2"
                   FontWeight="Bold" VerticalAlignment="Bottom"
                   HorizontalContentAlignment="Center"
                   Content="Email" HorizontalAlignment="Right" Margin="0,0,145,0" />

            <Label x:Name="lblProfileName" Grid.Row="1" Grid.Column="2"
                   FontWeight="Bold"
                   HorizontalContentAlignment="Center"
                   Content="" HorizontalAlignment="Center" Margin="0,-2,-164,-2" Padding="5,5,5,5" />

            <Label x:Name="lblPassword" Grid.Row="3" Grid.Column="2"
                   FontWeight="Bold" VerticalAlignment="Bottom"
                   HorizontalContentAlignment="Center"
                   HorizontalAlignment="Right"
                   Content="Password" Margin="0,0,123,0"/>

            <PasswordBox x:Name="pwdPassword" Grid.Row="4" Grid.Column="2"
                     Margin="2px" 
                     Width="179"
                     HorizontalAlignment="Right" Password="password"/>
        </Grid>
        <DataGrid Grid.Row="3" x:Name="grdLibrary" AutoGenerateColumns="false" BorderThickness="0,0,0,0" FontWeight="UltraBlack" HorizontalGridLinesBrush="White" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Image" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageFilePath}" MaxWidth="100" MinWidth="48" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Title}" Width="500"/>
                <DataGridTextColumn Header="Artist" Width="500"/>
                <DataGridTextColumn Header="Album" Width="500"/>
                <DataGridTextColumn Header="Year" Binding="{Binding YearReleased}" Width="75"/>
                <DataGridTextColumn Header="Length" Width="75"/>
                <DataGridTextColumn Header="Plays" Binding="{Binding Plays}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
