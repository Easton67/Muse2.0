<Page x:Class="Muse2.pgArtwork"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Muse2"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="660"
      Title="pgArtwork" Background="#FFE8E6EA" Loaded="Page_Loaded">
    <Page.Resources>
        <Style x:Key="NoFocusBorderStyle" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125" />
            <ColumnDefinition />
            <ColumnDefinition Width="125" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="TextBoxWithImage" 
                 Grid.RowSpan="8"
                 Grid.ColumnSpan="3"
                 Foreground="#FFE8E6EA"
                 Background="Transparent" PreviewKeyDown="TextBoxWithImage_PreviewKeyDown" 
                 CaretBrush="#FFE8E6EA" 
                 Cursor="Arrow"/>


        <Button 
            Width="90" 
            HorizontalContentAlignment="Center" 
            Background="White" 
            Padding="11,1,11,1" 
            Height="30" 
            HorizontalAlignment="Right" 
            Grid.Row="7" 
            x:Name="btnAddArtwork" 
            Click="btnAddArtwork_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
            Add Artwork
        </Button>
        <Button 
            Width="115" 
            HorizontalContentAlignment="Center" 
            Background="White" 
            Padding="11,1,11,1" 
            Height="30" 
            HorizontalAlignment="Right" 
            Grid.Row="7" 
            Grid.Column="2" 
            x:Name="btnRemoveArtwork" 
            Click="btnRemoveArtwork_Click" Margin="0,0,10,0">
            Remove Artwork
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image x:Name="imgArtwork" 
               Grid.Row="1"
               Source="\Resources\defaultAlbumImage.png"
               Grid.RowSpan="6" 
               Grid.Column="1">
        </Image>
    </Grid>
</Page>
