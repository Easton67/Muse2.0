<Window x:Class="Muse2.SignIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Muse2"
        mc:Ignorable="d"
    Title="SignIn" Height="550" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray" Loaded="Window_Loaded">
    <Grid>
        <Image Source="C:\Users\67Eas\source\repos\WpfTutorials\Wpf-LoginForm\Images\museBackground.jpg" Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="7"/>
            </Image.Effect>
        </Image>

        <Border CornerRadius="10"                    
                BorderThickness="2" 
                Width="800" 
                Height="533">
            <Grid Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="381*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="5"
                            Background="White"
                            Width="250"
                            Height="440"
                            Panel.ZIndex="1"
                            Margin="239,46,273,35" Grid.Column="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Direction="270"/>
                    </Border.Effect>
                    <StackPanel Width="250"
                                    Grid.Row="1"
                                    Orientation="Vertical"
                                    Height="520"
                                    Panel.ZIndex="1" 
                                    Margin="0,1,0,0">

                        <Image x:Name="imgLogo" 
                                   Source="C:\Users\67Eas\source\repos\WpfTutorials\Wpf-LoginForm\Images\museLogo.png"
                                   Width="170" Height="100" Margin="-8,21,0,0"/>
                        <StackPanel>
                            <TextBlock x:Name="txtSubHeader"
                                    Text="Control what you listen to."
                                    Foreground="Black"
                                    FontSize="14"
                                    FontWeight="Medium"
                                    TextWrapping="Wrap"
                                    TextAlignment="Center"
                                    Margin="0,5,0,21"/>
                            <!--Frames-->
                            <Frame x:Name="frmSignUp" Height="242" Visibility="Collapsed" />
                            <Frame x:Name="frmSignIn" Height="242" Visibility="Collapsed"/>
                            <Frame x:Name="frmVerification" Height="242" Visibility="Collapsed"/>
                            <StackPanel x:Name="stkFooterButtons" Orientation="Horizontal" Margin="0,5,0,0">
                                <Button x:Name="btnBack"
                                         Content="Sign Up"
                                         Background="transparent" 
                                         BorderThickness="0,0,0,0" 
                                         Foreground="Black"
                                         FontSize="12"
                                         FontFamily="Montserrat"
                                         Margin="-9,0,0,0" 
                                         Width="90" 
                                         Click="btnBack_Click">
                                </Button>
                                <Button x:Name="btnForgotPassword" 
                                        Content="Forgot Password" 
                                        Background="transparent" 
                                        BorderThickness="0,0,0,0" 
                                        Foreground="Black"
                                        FontSize="12"
                                        FontFamily="Montserrat"
                                        Margin="1,0,0,0" 
                                        Width="90" 
                                        Click="btnForgotPassword_Click" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
