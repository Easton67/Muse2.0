<Window x:Class="Muse2.addPlaylistFolderFromFiles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Muse2"
        mc:Ignorable="d"
        Title="addPlaylistFolderFromFiles" Height="450" Width="800" Background="#FFE4A1A1">
    <Grid>
        <Label Content="Playlist Folder File Path" Margin="331,153,331,253"/>
        <TextBox x:Name="txtFolderPath" Height="50" Margin="160,192,160,192"/>
        <Button x:Name="btnAdd" Width="200" Height="50" Margin="300,260,300,124" Click="btnAdd_Click" Background="#FFE2A7A7" BorderThickness="1,1,1,1">
            Add Songs to Library
        </Button>
    </Grid>
</Window>
